{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["server/src/*"],
      "@client/*": ["client/src/*"]
    },
    "outDir": "dist"
  },
  "include": ["server/src", "client/src"],
  "exclude": ["node_modules", "dist"]
}
