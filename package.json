{
  "name": "train-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "tsx server/src/server.js",
    "dev:client": "vite --config client/vite.config.ts",
    "dev": "concurrently \"yarn run dev:server\" \"yarn run dev:client\"",
    "build": "tsc && vite build --config client/vite.config.ts",
    "start": "node server/dist/server.js",
    "generate:server": "npx openapi-typescript-codegen --input server/openapi/openapi.yaml --output server/src/generated --client none"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "dependencies": {
    "db-vendo-client": "^6.10.0",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/hafas-client": "^6.3.0",
    "@types/node": "^24.4.0",
    "concurrently": "^8.0.0",
    "openapi-typescript-codegen": "^0.29.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
