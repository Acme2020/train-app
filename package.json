{
  "name": "train-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "tsx server/src/server.ts",
    "dev:client": "cd client && vite",
    "dev": "concurrently \"yarn run dev:server\" \"yarn run dev:client\"",
    "build": "tsc && vite build --config client/vite.config.ts",
    "start": "node server/dist/server.js",
    "test:server": "vitest run server/src/**/*.test.ts",
    "generate:server": "npx openapi-typescript-codegen --input server/openapi/openapi.yaml --output server/src/generated --client none"
  },
  "workspaces": [
    "server",
    "client",
    "shared"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.4.0",
    "concurrently": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
